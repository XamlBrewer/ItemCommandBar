                  ItemsSource="{Binding CheesePlate}"
                  SelectedItem="{Binding SelectedCheese, Mode=TwoWay}"
                  Margin="20"
                  HorizontalAlignment="Left"
                  Grid.Row="1">
            <ListView.Header>
                <TextBlock Text="Cheese Plate"
                           FontSize="32"
                           Foreground="{StaticResource MightyRed}"
                           Margin="4" />
            </ListView.Header>
