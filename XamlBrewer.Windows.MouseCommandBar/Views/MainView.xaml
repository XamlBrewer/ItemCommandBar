                        </Canvas>
                    </Viewbox>
                </Canvas>
                <Grid Width="200"
                      Height="80">
                    <TextBlock Foreground="{StaticResource MightyRed}"
                               FontSize="24"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Padding="0"
                               Margin="0 0 8 12">
            		<Run Text="XAML" />
            		<Run Text="Brewer"
                         Foreground="Black"
                         FontWeight="Light" />
                    </TextBlock>
                </Grid>
            </Canvas>
        </Viewbox>

        <!-- Mode Indicator -->
        <TextBlock x:Name="ModeTextBlock" 
                   FontSize="24"
                   Margin="0 0 20 100"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   Grid.Row="2" />

        <!-- AppBar Hint -->
        <local:CollapsedAppBar VerticalAlignment="Bottom"
                               Grid.RowSpan="10"
                               Grid.ColumnSpan="10" />
    </Grid>
    <Page.BottomAppBar>
        <CommandBar x:Name="CommandBar"
                    Background="{StaticResource MightyPink}"
                    >
            <AppBarButton Label="Smell"
                          DataContext="{Binding SelectedCheese}"
                          Command="{Binding SmellCommand}">
                <AppBarButton.Icon>
                    <PathIcon Height="32"
                              Width="32"
                              Margin="10 10 0 0"
