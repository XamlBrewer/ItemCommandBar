<Application x:Class="XamlBrewer.MouseCommandBar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:XamlBrewer.MouseCommandBar">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Resource Dictionaries -->
            <ResourceDictionary.MergedDictionaries>
                <!-- CollapsedAppBar style -->
                <ResourceDictionary Source="Controls/CollapsedAppBar.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="GeronimoTie"
                             Color="#FFD0061E" />
            <SolidColorBrush x:Key="GeronimoPants"
                             Color="#FF90996C" />
            <SolidColorBrush x:Key="GeronimoFur"
                             Color="#FFE6892C" />
            <SolidColorBrush x:Key="GeronimoFeet"
                             Color="#FFD5ECFA" />

            <!-- Override the listview selected item colors -->
            <SolidColorBrush x:Key="ListViewItemSelectedPointerOverBorderThemeBrush"
                             Color="#FFE53118" />
            <SolidColorBrush x:Key="ListViewItemSelectedBackgroundThemeBrush"
                             Color="#FFE53118" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
